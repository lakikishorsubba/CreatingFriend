<h1>Listed Friends</h1>
</br>
<% if user_signed_in?%>
  <div class = "table-responsive">
    <table class="table table-striped table-bordered table-hover">
      <thead class="table-dark">
        <tr>
          <th> Name</th>
          <th>Email</th>
          <th>Phone</th>
          <th>Facebook</th>
        </tr>
      </thead>
      <tbody>
        <% @friends.each do |friend| %>
          <% if friend.user == current_user%>
          <tr>
        
            <td>
            <%= link_to friend.first_name + ' ' + friend.last_name, friend, class: "text-decoration-none" %>
            </td>
           

            <td><%= friend.email %></td>
            <td><%= friend.phone %></td>
            <td><%= friend.facebook %></td>
          </tr>
          <%end%>
        <% end %>
      </tbody>
    </table>
  </div>

  <div>
    <%= link_to "New Fried", new_friend_path, class:"btn btn-secondary" %>
  </div>
  <%else%>
  <%end%>

